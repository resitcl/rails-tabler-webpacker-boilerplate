<div class="body-container col-xs-12">
  <div class="form-container container">
    <div class="form col-xs-10 col-xs-offset-1 offset-md-3 col-md-6 col-lg-4 offset-lg-4 ">
      <%= image_tag 'logo-banner.png' %>
      <div class="login-lead">Recuperar contraseÃ±a</div>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= devise_error_messages! %>
        <div class="form-group">
          <label class="form-label float-left">Email</label>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Ingrese su email', class: 'form-control' %>
        </div>
        <div class="actions">
          <%= f.submit "Enviar instrucciones", class: 'login-btn btn-primary mt-5' %>
        </div>
      <% end %>
      <div class="mt-5">
        <%= render "devise/shared/links" %>
      </div>
      </div>
    </div>
  </div>
</div>
